{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@/controllers/*": ["controllers/*"],
            "@/services/*": ["services/*"],
            "@/models/*": ["models/*"],
            "@/types/*": ["types/*"],
            "@/utils/*": ["utils/*"],
            "@/middlewares/*": ["middlewares/*"],
            "@/config/*": ["config/*"],
            "@/database/*": ["database/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
}
